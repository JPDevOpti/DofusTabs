<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Paleta de colores de la interfaz de Dofus -->
    <!-- Fondos estilo pergamino -->
    <Color x:Key="RetroBeige">#E8DCC0</Color>
    <Color x:Key="RetroBeigeAlt">#DDD1B5</Color>
    <Color x:Key="RetroHeader">#C9B894</Color>
    <Color x:Key="RetroBorder">#5C4A33</Color>
    <Color x:Key="RetroAccent">#CC7A3A</Color>
    <Color x:Key="RetroAccentDark">#A85F28</Color>
    <Color x:Key="RetroText">#2B1F15</Color>
    <Color x:Key="RetroTooltip">#F5E8C8</Color>
    <Color x:Key="RetroOrange">#E8974F</Color>
    <Color x:Key="RetroDarkBrown">#3D2F1F</Color>

    <SolidColorBrush x:Key="RetroBeigeBrush" Color="{StaticResource RetroBeige}"/>
    <SolidColorBrush x:Key="RetroBeigeAltBrush" Color="{StaticResource RetroBeigeAlt}"/>
    <SolidColorBrush x:Key="RetroHeaderBrush" Color="{StaticResource RetroHeader}"/>
    <SolidColorBrush x:Key="RetroBorderBrush" Color="{StaticResource RetroBorder}"/>
    <SolidColorBrush x:Key="RetroAccentBrush" Color="{StaticResource RetroAccent}"/>
    <SolidColorBrush x:Key="RetroAccentDarkBrush" Color="{StaticResource RetroAccentDark}"/>
    <SolidColorBrush x:Key="RetroTextBrush" Color="{StaticResource RetroText}"/>
    <SolidColorBrush x:Key="RetroTooltipBrush" Color="{StaticResource RetroTooltip}"/>
    <SolidColorBrush x:Key="RetroOrangeBrush" Color="{StaticResource RetroOrange}"/>
    <SolidColorBrush x:Key="RetroDarkBrownBrush" Color="{StaticResource RetroDarkBrown}"/>

    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource RetroAccentBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="{StaticResource RetroDarkBrownBrush}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource RetroOrangeBrush}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource RetroAccentDarkBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="ListBox">
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style TargetType="ListBoxItem">
        <Setter Property="Padding" Value="5"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#E8F4F8"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#C7E0F4"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="{StaticResource RetroBeigeBrush}"/>
        <Setter Property="RowBackground" Value="{StaticResource RetroBeigeBrush}"/>
        <Setter Property="AlternatingRowBackground" Value="{StaticResource RetroBeigeAltBrush}"/>
        <Setter Property="GridLinesVisibility" Value="All"/>
        <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource RetroDarkBrownBrush}"/>
        <Setter Property="VerticalGridLinesBrush" Value="{StaticResource RetroDarkBrownBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource RetroDarkBrownBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="SelectionUnit" Value="FullRow"/>
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="CanUserAddRows" Value="False"/>
        <Setter Property="CanUserDeleteRows" Value="False"/>
        <Setter Property="IsReadOnly" Value="False"/>
    </Style>

    <Style TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="{StaticResource RetroHeaderBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource RetroTextBrush}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="BorderThickness" Value="0,0,1,2"/>
        <Setter Property="BorderBrush" Value="{StaticResource RetroDarkBrownBrush}"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
    </Style>

    <Style TargetType="DataGridRow">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#F2E6CA"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#E8B76D"/>
                <Setter Property="BorderBrush" Value="{StaticResource RetroAccentBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="DataGridCell">
        <Setter Property="Padding" Value="5"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="{StaticResource RetroTextBrush}"/>
    </Style>

</ResourceDictionary>

